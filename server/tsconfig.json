{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}
